<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.betterclever.aparoksha.fragments.TeamFragment">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/team_title"
            android:text="Team Aparoksha"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            app:layout_heightPercent="10%"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/team_title"
            android:id="@+id/team_recyclerview"
            android:layout_width="match_parent"
            app:layout_heightPercent="40%" />

        <TextView
            android:id="@+id/developers_title"
            android:text="Developed by"
            android:layout_below="@id/team_recyclerview"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            app:layout_heightPercent="10%"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/developers_recyclerview"
            android:layout_width="match_parent"
            android:layout_below="@id/developers_title"
            app:layout_heightPercent="40%" />

    </android.support.percent.PercentRelativeLayout>

</FrameLayout>
